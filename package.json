{
  "name": "app",
  "version": "0.1.0",
  "description": "Find a tutor close to you",
  "author": "Mitra Mej√≠a",
  "license": "MIT",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "test": "node ./node_modules/jest/bin/jest.js --watch",
    "test:update": "node ./node_modules/jest/bin/jest.js -u",
    "devtools": "react-devtools"
  },
  "jest": {
    "preset": "jest-expo",
    "moduleFileExtensions": ["js", "jsx"],
    "moduleDirectories": ["node_modules"],
    "moduleNameMapper": {
      "^js(.*)$": "<rootDir>/graphql/$1",
      "^constants(.*)$": "<rootDir>/constants/$1",
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/assets/images/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|expo|react-navigation|native-base-shoutem-theme|@shoutem/theme|@shoutem/animation|@shoutem/ui|tcomb-form-native)"

    ]
  },
  "eslintConfig": {
    "extends": "expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^5.1.0",
    "apollo-client": "^1.9.1",
    "expo": "^20.0.0",
    "faker": "^4.1.0",
    "graphql-tag": "^2.4.2",
    "lodash": "^4.17.4",
    "native-base": "^2.3.1",
    "react": "16.0.0-alpha.12",
    "react-apollo": "^1.4.14",
    "react-native": "https://github.com/expo/react-native/archive/sdk-20.0.0.tar.gz",
    "react-native-easy-grid": "^0.1.15",
    "react-native-image-picker": "^0.26.3",
    "react-navigation": "^1.0.0-beta.12",
    "subscriptions-transport-ws": "^0.8.2"
  },
  "devDependencies": {
    "babel-preset-react-native": "1.9.2",
    "eslint": "^4.5.0",
    "eslint-config-expo": "^6.0.0",
    "jest-expo": "^20.0.0",
    "prettier": "^1.5.3",
    "react-devtools": "^2.5.0",
    "react-devtools-core": "^2.5.0",
    "react-dom": "^16.0.0-beta.5",
    "react-native-dotenv": "^0.1.0",
    "react-test-renderer": "16.0.0-alpha.12"
  }
}
